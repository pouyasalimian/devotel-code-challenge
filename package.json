{
  "name": "devotel-code-challenge",
  "private": false,
  "version": "1.0.0",
  "description": "Nest TypeScript repository",
  "license": "proprietary",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "prisma": "prisma",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "nest": "nest",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/jest/bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "~10",
    "@nestjs/config": "~3",
    "@nestjs/core": "~10",
    "@nestjs/platform-fastify": "~10",
    "@prisma/client": "~5",
    "class-transformer": "~0",
    "class-validator": "~0",
    "luxon": "~3",
    "nestjs-pino": "~4",
    "pino": "~8",
    "pino-pretty": "~11",
    "pino-socket": "~7",
    "pino-syslog": "~3",
    "reflect-metadata": "~0",
    "rxjs": "~7"
  },
  "devDependencies": {
    "@fastify/static": "~7",
    "@nestjs/cli": "~10",
    "@nestjs/schematics": "~10",
    "@nestjs/swagger": "~7",
    "@nestjs/testing": "~10",
    "@swc/cli": "~0",
    "@swc/core": "~1",
    "@types/jest": "~29",
    "@types/luxon": "~3",
    "@types/netmask": "~2",
    "@types/node": "~20",
    "@types/supertest": "~6",
    "@typescript-eslint/eslint-plugin": "~7",
    "@typescript-eslint/parser": "~7",
    "eslint": "^8",
    "eslint-config-prettier": "~9",
    "eslint-plugin-prettier": "~5",
    "fastify": "~4",
    "jest": "~29",
    "prettier": "~3",
    "prisma": "~5",
    "source-map-support": "~0",
    "supertest": "~6",
    "ts-jest": "~29",
    "ts-loader": "~9",
    "ts-node": "~10",
    "tsconfig-paths": "~4",
    "typescript": "~5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
